    <script>
        function validateEmail(email) {
            var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

            //Email valid. Procees to test if it's from the right domain (Second argument is to check that the string ENDS with this domain, and that it doesn't just contain it)
            if (email.value.toLowerCase().includes("@deloitte.com") || email.value.toLowerCase().includes("@aaronhgold.com")) {
                document.getElementById("error-text").innerHTML = "";
                const button = document.getElementById('submit-button')
                button.disabled = false;
            } else {
                document.getElementById("error-text").innerHTML = "<span style='padding-bottom:20px'>Error: Please enter a Deloitte email address </span>";
                const button = document.getElementById('submit-button')
                button.disabled = true;
            }
        }
    </script>
