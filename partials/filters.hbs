    <div class="row">
        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" id="epcheckbox"><span id="labelbox">EP</span>
            </label>
        </div>
        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" id="hccheckbox"><span id="labelbox">HC</span>
            </label>
        </div>
        <div class="col-sm"></div>
    </div>


    <div class="row speech-bubble left-bubble" id="enterprise-performance-section">
        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" name="filters[ep-sap]" value="ep-sap" id="ep-subcat"><span
                    id="labelbox">SAP</span>
            </label>
        </div>
        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" name="filters[ep-oracle]" value="ep-oracle" id="ep-subcat"><span
                    id="labelbox">Oracle</span>
            </label>
        </div>
        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" name="filters[ep-supply]" value="ep-supply" id="ep-subcat"><span
                    id="labelbox">Supply Chain</span>
            </label>
        </div>
        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" name="filters[ep-erp]" value="ep-erp" id="ep-subcat"><span
