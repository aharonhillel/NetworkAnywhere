        <div class="col-sm" id="checkboxcat">
            <label class="checkbox-inline">
                <input type="checkbox" id="cmcheckbox"><span id="labelbox">C&M</span>
            </label>
        </div>

        <div class="col-sm" id="checkboxcat">
            <label class="checkbox-inline">
                <input type="checkbox" id="cbocheckbox"><span id="labelbox">CBO</span>
            </label>
        </div>
    </div>

    <div class="row speech-bubble left-bubble" id="strategy-analytics-section">
        <div class="col-sm">
