        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" name="filters[lshc]" value="lshc"><span id="labelbox">LSHC</span>
            </label>
        </div>
        <div class="col-sm">
            <label class="checkbox-inline">
                <input type="checkbox" name="filters[consumer]" value="consumer"><span id="labelbox">TMT</span>
            </label>
        </div>


    </div>



</div>

<style>
    .btn-primary-outline {
        background-color: transparent;
        border-color: #fff;
        color: #fff;
    }

    #filter-section {
        padding-bottom: 10px;
        margin-bottom: 20px;
        background-color: rgba(247, 246, 246, 0.85);
        border-radius: 10px;
        border-color: #fff;
        margin-left: 15px;
        margin-right: 15px;
        padding-top: 10px;
    }

    #filter-section .col-sm {
        padding-right: 0px;


    }

    #labelbox {
        margin-left: 10px;
        color: #000;
        font-size: 15px;
    }

    #section-title {
        color: #000;
        font-size: 15px;
    }

    .industries-title {
        margin-top: 15px !important;
    }

    #section-line {
        margin-top: 0px;
        margin-bottom: 10px;
        border-color: #000;
    }

    #filter-button {
        margin-bottom: 10px;
    }


    .speech-bubble {
        margin-top: 20px;
        margin-bottom: 20px;
        padding-top: 10px;
        padding-bottom: 10px;
        position: relative;
        background: #fff;
        border-radius: .4em;
    }

    .speech-bubble:after {
        content: '';
        position: absolute;
        top: 7px;
        width: 0;
        height: 0;
        border: 20px solid transparent;
        border-bottom-color: #fff;
        border-top: 0;
        margin-left: -20px;
        margin-top: -20px;
    }

    .left-bubble:after {
        left: 15%;
    }

    .center-bubble:after {
        left: 50%;
    }

    .right-bubble:after {
        left: 80%;
    }
</style>

<script>

    $(document).ready(function () {
        $("#filter-section").hide(); //Hide filter options by default
        $("#strategy-analytics-section").hide();
        $("#customer-marketing-section").hide();
        $("#core-business-section").hide();
        $("#enterprise-performance-section").hide();
        $("#human-capital-section").hide();
    });


    $("#filter-button").click(function () {
        $("#filter-section").toggle();
    });

    $('#sacheckbox').click(function () {
        $(".speech-bubble").hide();
        if (this.checked) {
            $("#strategy-analytics-section").show();
            $('input#sa-subcat').prop('checked', true);
        } else {
            $('input#sa-subcat').prop('checked', false);

            $("#strategy-analytics-section").hide();
        }
    });



    $('#cmcheckbox').click(function () {
        $(".speech-bubble").hide();
        if (this.checked) {
            $("#customer-marketing-section").show();
            $("input#cm-subcat").prop("checked", true);
        } else {
            $("input#cm-subcat").prop("checked", false); //If uncheck main, uncheck sub checkboxes
            $("#customer-marketing-section").hide();
        }
    });


    $('#cbocheckbox').click(function () {
        $(".speech-bubble").hide();
        if (this.checked) {
            $("#core-business-section").show();
            $("input#cbo-subcat").prop("checked", true);
        } else {
            $("input#cbo-subcat").prop("checked", false); //If uncheck main, uncheck sub checkboxes
            $("#core-business-section").hide();
        }
    });


    $('#epcheckbox').click(function () {
        $(".speech-bubble").hide();
        if (this.checked) {
            $("#enterprise-performance-section").show();
            $("input#ep-subcat").prop("checked", true);
        } else {
            $("input#ep-subcat").prop("checked", false); //If uncheck main, uncheck sub checkboxes
            $("#enterprise-performance-section").hide();
        }
    });

    $('#hccheckbox').click(function () {
        $(".speech-bubble").hide();
        if (this.checked) {
            $("#human-capital-section").show();
            $("input#hc-subcat").prop("checked", true);
        } else {
            $("input#hc-subcat").prop("checked", false); //If uncheck main, uncheck sub checkboxes
            $("#human-capital-section").hide();
        }
    });
</script>